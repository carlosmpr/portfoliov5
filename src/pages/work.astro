---
import "../styles/global.css";
import { allProjects, featuredProjects } from "../data/projects.js";
import Navbar from "../components/Navbar.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio of projects and work by Carlos Polanco - Full-stack developer and AI consultant" />
    <meta name="keywords" content="portfolio, projects, full-stack developer, AI consultant, React, Node.js, web development" />
    <meta property="og:title" content="Work - Carlos Polanco" />
    <meta property="og:description" content="Portfolio of projects and work by Carlos Polanco" />
    <meta property="og:type" content="website" />
    <title>Work - Carlos Polanco</title>
</head>
<body class="bg-neutral-950 text-white font-sans antialiased overflow-x-hidden">
    <Navbar currentPage="work" />

    <!-- Hero Section -->
    <header class="pt-24 sm:pt-32 pb-12 sm:pb-16 px-4 sm:px-6">
        <div class="max-w-4xl mx-auto text-center">
            <!-- Pill Badge -->
            <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-white/70 mb-6">
                Portfolio showcase
            </div>
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-light text-white mb-6 tracking-tight">
                My Work
            </h1>
            <p class="text-lg sm:text-xl text-white/70 max-w-2xl mx-auto font-light leading-relaxed">
                A collection of projects that showcase my passion for creating meaningful digital experiences
            </p>
        </div>
    </header>

    <!-- Filter/Category Section -->
    <section class="pb-12 sm:pb-16 px-4 sm:px-6">
        <div class="max-w-4xl mx-auto">
            <div class="flex flex-wrap justify-center gap-3 sm:gap-4">
                <button class="px-4 sm:px-6 py-2 bg-white/10 border border-white/20 text-white rounded-full text-sm font-medium backdrop-filter backdrop-blur-10">All Projects</button>
                <button class="px-4 sm:px-6 py-2 border border-white/10 bg-white/5 text-white/70 rounded-full text-sm font-medium hover:border-white/20 hover:bg-white/10 transition-all">Web Apps</button>
                <button class="px-4 sm:px-6 py-2 border border-white/10 bg-white/5 text-white/70 rounded-full text-sm font-medium hover:border-white/20 hover:bg-white/10 transition-all">AI/ML</button>
                <button class="px-4 sm:px-6 py-2 border border-white/10 bg-white/5 text-white/70 rounded-full text-sm font-medium hover:border-white/20 hover:bg-white/10 transition-all">Open Source</button>
            </div>
        </div>
    </section>

    <main>
        <!-- Featured Project -->
        {featuredProjects.map((project) => (
            <section class="relative mb-16">
                <div class="max-w-7xl mx-auto px-4 sm:px-6">
                    <div class="aspect-[4/2] sm:aspect-[5/2] overflow-hidden rounded-xl bg-neutral-800">
                        <div class={`bg-gradient-to-br ${project.gradient} w-full h-full flex items-end`}>
                            <div class="absolute inset-0 rounded-xl bg-gradient-to-t from-black/60 via-black/10"></div>
                            <div class="relative p-6 lg:p-8 text-white max-w-2xl">
                                <div class="flex flex-wrap items-center gap-2 mb-3">
                                    <span class="px-2 py-1 bg-white/20 text-white rounded-full text-xs font-semibold uppercase tracking-wide">Featured</span>
                                    {project.status.map((status) => (
                                        <span class="px-2 py-1 bg-white/20 text-white rounded-full text-xs font-semibold uppercase tracking-wide">{status}</span>
                                    ))}
                                </div>
                                <h2 class="text-xl sm:text-2xl font-light leading-snug mb-3">{project.title}</h2>
                                <p class="text-white/90 text-sm mb-3 leading-relaxed">{project.description}</p>
                                <div class="flex items-center gap-3 text-sm opacity-90">
                                    <span>{project.tags.slice(0, 2).join(' • ')}</span>
                                    <span class="w-1 h-1 rounded-full bg-white"></span>
                                    <span>Case Study Available</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        ))}

        <!-- Projects Grid -->
        <section class="pb-16 sm:pb-20 px-4 sm:px-6">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                    
                    {allProjects.filter(project => !project.featured).map((project) => (
                        <article class="group cursor-pointer" onclick={`window.location.href='/work/${project.slug}'`} role="button" tabindex="0" onkeydown={`if(event.key==='Enter'||event.key===' ') window.location.href='/work/${project.slug}'`}>
                            <div class="aspect-[4/3] overflow-hidden rounded-lg bg-neutral-800">
                                <div class={`bg-gradient-to-br ${project.gradient} w-full h-full transition-transform duration-300 group-hover:scale-105 flex items-center justify-center`}>
                                    <div class="text-center">
                                        <div class="w-12 h-12 sm:w-16 sm:h-16 bg-white/20 rounded-2xl mx-auto mb-3 sm:mb-4 flex items-center justify-center">
                                            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                            </svg>
                                        </div>
                                        <span class="text-white font-medium text-sm sm:text-base">{project.title}</span>
                                    </div>
                                </div>
                            </div>
                            <p class="mt-4 text-xs font-semibold uppercase tracking-wide text-blue-400">{project.category || 'Development'}</p>
                            <h3 class="mt-1 text-lg font-light leading-tight text-white">{project.title}</h3>
                            <p class="mt-2 text-sm text-white/60 leading-relaxed">{project.description}</p>
                            <div class="mt-4 flex items-center gap-3 text-sm">
                                <span class="text-white/70">Carlos Polanco</span>
                                <span class="text-white/40">• {project.year || '2024'}</span>
                            </div>
                        </article>
                    ))}

                </div>
            </div>
        </section>

        <!-- Skills & Technologies -->
        <Contact />

    <Footer />

</body>
</html>
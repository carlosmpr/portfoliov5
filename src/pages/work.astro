---
import "../styles/global.css";
import { allProjects, featuredProjects } from "../data/projects.js";
import Navbar from "../components/Navbar.astro";
import Technologies from "../components/Technologies.astro";
import Footer from "../components/Footer.astro";
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio of projects and work by Carlos Polanco - Full-stack developer and AI consultant" />
    <meta name="keywords" content="portfolio, projects, full-stack developer, AI consultant, React, Node.js, web development" />
    <meta property="og:title" content="Work - Carlos Polanco" />
    <meta property="og:description" content="Portfolio of projects and work by Carlos Polanco" />
    <meta property="og:type" content="website" />
    <title>Work - Carlos Polanco</title>
</head>
<body class="bg-white text-gray-900 font-sans antialiased overflow-x-hidden">
    <Navbar currentPage="work" />

    <!-- Hero Section -->
    <header class="pt-24 sm:pt-32 pb-12 sm:pb-16 px-4 sm:px-6">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-light text-gray-900 mb-6 tracking-tight">
                My Work
            </h1>
            <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto font-light leading-relaxed">
                A collection of projects that showcase my passion for creating meaningful digital experiences
            </p>
        </div>
    </header>

    <!-- Filter/Category Section -->
    <section class="pb-12 sm:pb-16 px-4 sm:px-6">
        <div class="max-w-4xl mx-auto">
            <div class="flex flex-wrap justify-center gap-3 sm:gap-4">
                <button class="px-4 sm:px-6 py-2 bg-gray-900 text-white rounded-full text-sm font-medium">All Projects</button>
                <button class="px-4 sm:px-6 py-2 border border-gray-300 text-gray-700 rounded-full text-sm font-medium hover:border-gray-400 transition-colors">Web Apps</button>
                <button class="px-4 sm:px-6 py-2 border border-gray-300 text-gray-700 rounded-full text-sm font-medium hover:border-gray-400 transition-colors">AI/ML</button>
                <button class="px-4 sm:px-6 py-2 border border-gray-300 text-gray-700 rounded-full text-sm font-medium hover:border-gray-400 transition-colors">Open Source</button>
            </div>
        </div>
    </section>

    <main>
        <!-- Featured Project -->
        {featuredProjects.map((project) => (
            <section class="pb-16 sm:pb-20 px-4 sm:px-6">
                <div class="max-w-7xl mx-auto">
                    <div class={`bg-gradient-to-br ${project.gradient} rounded-2xl sm:rounded-3xl p-6 sm:p-8 md:p-16 text-white mb-16 sm:mb-20`}>
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 items-center">
                            <div>
                                <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-4 sm:mb-6">
                                    <span class="px-2 sm:px-3 py-1 bg-white/10 text-white rounded-full text-xs sm:text-sm backdrop-blur">Featured</span>
                                    {project.status.map((status) => (
                                        <span class="px-2 sm:px-3 py-1 bg-white/10 text-white rounded-full text-xs sm:text-sm backdrop-blur">{status}</span>
                                    ))}
                                </div>
                                <h2 class="text-2xl sm:text-3xl md:text-4xl font-light mb-4 sm:mb-6">{project.title}</h2>
                                <p class="text-slate-300 text-base sm:text-lg mb-6 sm:mb-8 leading-relaxed">
                                    {project.description}
                                </p>
                                <div class="flex flex-wrap gap-2 sm:gap-3 mb-6 sm:mb-8">
                                    {project.tags.map((tag) => (
                                        <span class="px-3 sm:px-4 py-1 sm:py-2 bg-white/10 text-white rounded-full text-xs sm:text-sm backdrop-blur">{tag}</span>
                                    ))}
                                </div>
                                <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                                    <a href={`/work/${project.slug}`} class="bg-white text-gray-900 px-4 sm:px-6 py-3 rounded-full hover:bg-gray-100 transition-colors font-medium text-center text-sm sm:text-base">
                                        View Case Study
                                    </a>
                                    <a href={project.demoUrl} class="border border-white/30 text-white px-4 sm:px-6 py-3 rounded-full hover:border-white/50 transition-colors font-medium text-center text-sm sm:text-base" target="_blank" rel="noopener noreferrer">
                                        View Live Site
                                    </a>
                                </div>
                            </div>
                            <div class="lg:order-last">
                                <div class="bg-white/5 rounded-2xl p-6 sm:p-8 backdrop-blur">
                                    <div class="aspect-video bg-white/10 rounded-xl flex items-center justify-center">
                                        <span class="text-white/60">Project Preview</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        ))}

        <!-- Projects Grid -->
        <section class="pb-16 sm:pb-20 px-4 sm:px-6">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
                    
                    {allProjects.filter(project => !project.featured).map((project) => (
                        <article class="group cursor-pointer" onclick={`window.location.href='/work/${project.slug}'`} role="button" tabindex="0" onkeydown={`if(event.key==='Enter'||event.key===' ') window.location.href='/work/${project.slug}'`}>
                            <div class={`bg-gradient-to-br ${project.gradient} rounded-2xl p-6 sm:p-8 mb-4 sm:mb-6 aspect-[4/3] flex items-center justify-center group-hover:scale-[1.02] transition-transform duration-300`}>
                                <div class="text-center">
                                    <div class="w-12 h-12 sm:w-16 sm:h-16 bg-white/20 rounded-2xl mx-auto mb-3 sm:mb-4 flex items-center justify-center">
                                        <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                        </svg>
                                    </div>
                                    <span class="text-white font-medium text-sm sm:text-base">{project.title}</span>
                                </div>
                            </div>
                            <h3 class="text-lg sm:text-xl font-medium text-gray-900 mb-2 group-hover:text-gray-600 transition-colors">{project.title}</h3>
                            <p class="text-gray-600 mb-3 sm:mb-4 leading-relaxed text-sm sm:text-base line-clamp-3">{project.description}</p>
                            <div class="flex flex-wrap gap-2 mb-3 sm:mb-4">
                                {project.tags.slice(0, 3).map((tag) => (
                                    <span class="px-2 sm:px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-xs sm:text-sm">{tag}</span>
                                ))}
                                {project.tags.length > 3 && (
                                    <span class="px-2 sm:px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-xs sm:text-sm">+{project.tags.length - 3}</span>
                                )}
                            </div>
                            <div class="flex gap-3">
                                <span class="text-gray-700 hover:text-gray-900 text-sm font-medium inline-flex items-center gap-1">
                                    Case Study 
                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </span>
                            </div>
                        </article>
                    ))}

                </div>
            </div>
        </section>

        <!-- Skills & Technologies -->
        <div class="bg-gray-50">
            <Technologies title="Technologies & Tools" />
        </div>

        <!-- Call to Action -->
        <section class="py-16 sm:py-20 px-4 sm:px-6" aria-labelledby="cta-heading">
            <div class="max-w-4xl mx-auto text-center">
                <h2 id="cta-heading" class="text-2xl sm:text-3xl md:text-4xl font-light text-gray-900 mb-4 sm:mb-6">
                    Let's work together
                </h2>
                <p class="text-lg sm:text-xl text-gray-600 mb-8 sm:mb-12 max-w-2xl mx-auto font-light">
                    Interested in collaborating on a project or have a question about my work?
                </p>
                <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
                    <a href="/contact" class="w-full sm:w-auto bg-gray-900 text-white px-6 sm:px-8 py-3 rounded-full hover:bg-gray-800 transition-colors text-center font-medium">
                        Get In Touch
                    </a>
                    <a href="/resume.pdf" class="w-full sm:w-auto border border-gray-300 text-gray-900 px-6 sm:px-8 py-3 rounded-full hover:border-gray-400 transition-colors text-center font-medium">
                        Download Resume
                    </a>
                </div>
            </div>
        </section>
    </main>

    <Footer />

</body>
</html>
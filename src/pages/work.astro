---
import "../styles/global.css";
import { allProjects, featuredProjects } from "../data/projects.js";
import Navbar from "../components/Navbar.astro";
import AIAgents from "../components/AIAgents.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Portfolio of projects and work by Carlos Polanco - Full-stack developer and AI consultant" />
    <meta name="keywords" content="portfolio, projects, full-stack developer, AI consultant, React, Node.js, web development" />
    <meta property="og:title" content="Work - Carlos Polanco" />
    <meta property="og:description" content="Portfolio of projects and work by Carlos Polanco" />
    <meta property="og:type" content="website" />
    <title>Work - Carlos Polanco</title>
</head>
<body class="bg-neutral-950 text-white font-sans antialiased overflow-x-hidden">
    <Navbar currentPage="work" />

    <!-- Hero Section with Title -->
    <header class="pt-24 sm:pt-32 pb-12 sm:pb-16 px-4 sm:px-6">
        <div class="max-w-4xl mx-auto text-center">
            <!-- Pill Badge -->
            <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-white/70 mb-6">
                Portfolio showcase
            </div>
            <h1 class="text-4xl sm:text-5xl md:text-6xl font-light text-white mb-6 tracking-tight">
                My Work
            </h1>
            <p class="text-lg sm:text-xl text-white/70 max-w-2xl mx-auto font-light leading-relaxed">
                A collection of projects that showcase my passion for creating meaningful digital experiences
            </p>
        </div>
    </header>

    <main>
        <!-- Project Slideshow -->
        <section class="slideshow-container relative w-full overflow-hidden mb-20 px-4 sm:px-6">
            <div class="mx-auto max-w-6xl">
                <div class="relative w-full flex items-center justify-center">
                    <!-- Viewport -->
                    <div class="relative w-full overflow-hidden rounded-2xl border border-white/10">
                        <!-- Track -->
                        <div id="track" class="flex transition-all duration-700 ease-in-out" style="transform: translateX(0%)">
                            <!-- Slide 1: Featured Project -->
                            <div class="slide w-full shrink-0 relative flex justify-center rounded-2xl h-[400px] sm:h-[600px] overflow-hidden">
                                <div class="bg-gradient-to-br from-purple-600 via-blue-600 to-cyan-500 absolute inset-0 h-full w-full"></div>
                                <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-black/60 via-black/10"></div>
                                <div class="slide-content opacity-0 transform translate-y-8 relative flex flex-col justify-end p-6 lg:p-8 text-white max-w-2xl w-full">
                                    <div class="flex flex-wrap items-center gap-2 mb-4">
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Featured</span>
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Live</span>
                                    </div>
                                    <h2 class="text-2xl sm:text-3xl md:text-4xl font-light leading-tight mb-4">ChatGPT Development Kit</h2>
                                    <p class="text-white/90 text-base sm:text-lg mb-6 leading-relaxed max-w-3xl">Open-source repository providing developers with practical ChatGPT integrations, custom prompts, and API workflows for common business use cases.</p>
                                    <div class="flex items-center gap-3 text-sm opacity-90 mb-6">
                                        <span>OpenAI API • JavaScript • Node.js</span>
                                        <span class="w-1 h-1 rounded-full bg-white"></span>
                                        <span>Case Study Available</span>
                                    </div>
                                    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                                        <a href="/work/chatgpt-development-kit" class="bg-white/10 border border-white/30 text-white px-6 py-3 rounded-full hover:bg-white/20 hover:border-white/40 transition-all font-medium text-center backdrop-blur">
                                            View Case Study
                                        </a>
                                        <a href="#" class="border border-white/40 bg-white/5 text-white px-6 py-3 rounded-full hover:border-white/60 hover:bg-white/10 transition-all font-medium text-center backdrop-blur">
                                            View Live Site
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Slide 2: AI Learning Platform -->
                            <div class="slide w-full shrink-0 relative flex justify-center rounded-2xl h-[400px] sm:h-[600px] overflow-hidden">
                                <div class="bg-gradient-to-br from-emerald-500 via-teal-600 to-blue-600 absolute inset-0 h-full w-full"></div>
                                <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-black/60 via-black/10"></div>
                                <div class="slide-content opacity-0 transform translate-y-8 relative flex flex-col justify-end p-6 lg:p-8 text-white max-w-2xl w-full">
                                    <div class="flex flex-wrap items-center gap-2 mb-4">
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Featured</span>
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Educational</span>
                                    </div>
                                    <h2 class="text-2xl sm:text-3xl md:text-4xl font-light leading-tight mb-4">AI Learning Platform</h2>
                                    <p class="text-white/90 text-base sm:text-lg mb-6 leading-relaxed max-w-3xl">Educational platform teaching AI concepts with hands-on tutorials, interactive examples, and real-world projects for developers.</p>
                                    <div class="flex items-center gap-3 text-sm opacity-90 mb-6">
                                        <span>Next.js • PostgreSQL • AI/ML</span>
                                        <span class="w-1 h-1 rounded-full bg-white"></span>
                                        <span>Case Study Available</span>
                                    </div>
                                    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                                        <a href="/work/ai-learning-platform" class="bg-white/10 border border-white/30 text-white px-6 py-3 rounded-full hover:bg-white/20 hover:border-white/40 transition-all font-medium text-center backdrop-blur">
                                            View Case Study
                                        </a>
                                        <a href="#" class="border border-white/40 bg-white/5 text-white px-6 py-3 rounded-full hover:border-white/60 hover:bg-white/10 transition-all font-medium text-center backdrop-blur">
                                            View Live Site
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Slide 3: WhatsApp AI Agents -->
                            <div class="slide w-full shrink-0 relative flex justify-center rounded-2xl h-[400px] sm:h-[600px] overflow-hidden">
                                <div class="bg-gradient-to-br from-orange-500 via-red-500 to-pink-600 absolute inset-0 h-full w-full"></div>
                                <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-black/60 via-black/10"></div>
                                <div class="slide-content opacity-0 transform translate-y-8 relative flex flex-col justify-end p-6 lg:p-8 text-white max-w-2xl w-full">
                                    <div class="flex flex-wrap items-center gap-2 mb-4">
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Featured</span>
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">AI Automation</span>
                                    </div>
                                    <h2 class="text-2xl sm:text-3xl md:text-4xl font-light leading-tight mb-4">WhatsApp AI Agents</h2>
                                    <p class="text-white/90 text-base sm:text-lg mb-6 leading-relaxed max-w-3xl">Intelligent AI service agents for restaurants and small businesses, handling customer inquiries, reservations, and appointment bookings automatically.</p>
                                    <div class="flex items-center gap-3 text-sm opacity-90 mb-6">
                                        <span>WhatsApp API • Node.js • AI</span>
                                        <span class="w-1 h-1 rounded-full bg-white"></span>
                                        <span>Case Study Available</span>
                                    </div>
                                    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                                        <a href="/work/whatsapp-ai-agents" class="bg-white/10 border border-white/30 text-white px-6 py-3 rounded-full hover:bg-white/20 hover:border-white/40 transition-all font-medium text-center backdrop-blur">
                                            View Case Study
                                        </a>
                                        <a href="#" class="border border-white/40 bg-white/5 text-white px-6 py-3 rounded-full hover:border-white/60 hover:bg-white/10 transition-all font-medium text-center backdrop-blur">
                                            View Live Demo
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Slide 4: MultiChat Panel Extension -->
                            <div class="slide w-full shrink-0 relative flex justify-center rounded-2xl h-[400px] sm:h-[600px] overflow-hidden">
                                <div class="bg-gradient-to-br from-indigo-600 via-purple-600 to-blue-700 absolute inset-0 h-full w-full"></div>
                                <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-black/60 via-black/10"></div>
                                <div class="slide-content opacity-0 transform translate-y-8 relative flex flex-col justify-end p-6 lg:p-8 text-white max-w-2xl w-full">
                                    <div class="flex flex-wrap items-center gap-2 mb-4">
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Featured</span>
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Productivity</span>
                                    </div>
                                    <h2 class="text-2xl sm:text-3xl md:text-4xl font-light leading-tight mb-4">MultiChat Panel Extension</h2>
                                    <p class="text-white/90 text-base sm:text-lg mb-6 leading-relaxed max-w-3xl">Chrome extension helping customer service teams manage multiple chat conversations simultaneously with enhanced productivity features.</p>
                                    <div class="flex items-center gap-3 text-sm opacity-90 mb-6">
                                        <span>Chrome API • React • TypeScript</span>
                                        <span class="w-1 h-1 rounded-full bg-white"></span>
                                        <span>Case Study Available</span>
                                    </div>
                                    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                                        <a href="/work/multichat-panel-extension" class="bg-white/10 border border-white/30 text-white px-6 py-3 rounded-full hover:bg-white/20 hover:border-white/40 transition-all font-medium text-center backdrop-blur">
                                            View Case Study
                                        </a>
                                        <a href="#" class="border border-white/40 bg-white/5 text-white px-6 py-3 rounded-full hover:border-white/60 hover:bg-white/10 transition-all font-medium text-center backdrop-blur">
                                            Chrome Store
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Slide 5: Loan Processing Automation -->
                            <div class="slide w-full shrink-0 relative flex justify-center rounded-2xl h-[400px] sm:h-[600px] overflow-hidden">
                                <div class="bg-gradient-to-br from-yellow-500 via-orange-600 to-red-600 absolute inset-0 h-full w-full"></div>
                                <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-black/60 via-black/10"></div>
                                <div class="slide-content opacity-0 transform translate-y-8 relative flex flex-col justify-end p-6 lg:p-8 text-white max-w-2xl w-full">
                                    <div class="flex flex-wrap items-center gap-2 mb-4">
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Featured</span>
                                        <span class="px-3 py-1 bg-white/20 border border-white/30 text-white rounded-full text-xs font-semibold uppercase tracking-wide backdrop-blur">Enterprise</span>
                                    </div>
                                    <h2 class="text-2xl sm:text-3xl md:text-4xl font-light leading-tight mb-4">Loan Processing Automation</h2>
                                    <p class="text-white/90 text-base sm:text-lg mb-6 leading-relaxed max-w-3xl">Python workflow system streamlining loan application processing for financial institutions with automated document analysis and approval workflows.</p>
                                    <div class="flex items-center gap-3 text-sm opacity-90 mb-6">
                                        <span>Python • REST APIs • Automation</span>
                                        <span class="w-1 h-1 rounded-full bg-white"></span>
                                        <span>Case Study Available</span>
                                    </div>
                                    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
                                        <a href="/work/loan-processing-automation" class="bg-white/10 border border-white/30 text-white px-6 py-3 rounded-full hover:bg-white/20 hover:border-white/40 transition-all font-medium text-center backdrop-blur">
                                            View Case Study
                                        </a>
                                        <a href="#" class="border border-white/40 bg-white/5 text-white px-6 py-3 rounded-full hover:border-white/60 hover:bg-white/10 transition-all font-medium text-center backdrop-blur">
                                            Request Demo
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Prev / Next buttons -->
                    <button id="prevBtn" class="absolute bottom-4 left-4 sm:bottom-auto sm:left-4 transform rounded-full bg-white/10 border border-white/20 p-3 text-white backdrop-blur hover:bg-white/20 transition-all" aria-label="Previous slide">
                        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M15 18l-6-6 6-6"/></svg>
                    </button>
                    <button id="nextBtn" class="absolute bottom-4 right-4 sm:bottom-auto sm:right-4 transform rounded-full bg-white/10 border border-white/20 p-3 text-white backdrop-blur hover:bg-white/20 transition-all" aria-label="Next slide">
                        <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M9 6l6 6-6 6"/></svg>
                    </button>
                </div>

                <!-- Tabs + animated underline -->
                <div id="tabs" class="relative mt-6 flex justify-center">
                    <div id="underline" class="absolute bottom-0 h-0.5 bg-blue-400 transition-all duration-500"></div>
                </div>

                <!-- Helper text -->
                <p class="text-xs sm:text-sm mx-auto max-w-md text-center text-white/60 mt-4 px-4">
                    Explore my <span class="font-semibold text-white">featured projects</span> showcasing full-stack development and AI integration.
                    Navigate through the slides to see detailed case studies and live demonstrations.
                </p>
            </div>
        </section>

        <!-- AI Agents Component -->
        <AIAgents />

        <!-- Contact Component -->
        <Contact />

    <Footer />

    <script>
        // Slideshow functionality
        const track = document.getElementById('track');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const tabs = document.getElementById('tabs');
        const underline = document.getElementById('underline');

        let slides = Array.from(track.querySelectorAll('.slide'));
        let count = slides.length;
        let index = 0;

        function setTrackWidth(){
            track.style.width = `${count * 100}%`;
            slides.forEach(s => s.style.width = `${100 / count}%`);
        }

        function setIndex(i){
            const prevIndex = index;
            index = (i + count) % count;
            
            // Add cool transition effects
            track.style.transform = `translateX(-${index * (100 / count)}%)`;
            
            // Animate slide content
            animateSlideContent(prevIndex, index);
            updateTabs();
        }
        
        function animateSlideContent(prevIndex, newIndex) {
            const allSlideContents = document.querySelectorAll('.slide-content');
            
            // Fade out previous slide content
            if (allSlideContents[prevIndex]) {
                allSlideContents[prevIndex].style.opacity = '0';
                allSlideContents[prevIndex].style.transform = 'translateY(20px)';
            }
            
            // Fade in new slide content with delay
            setTimeout(() => {
                if (allSlideContents[newIndex]) {
                    allSlideContents[newIndex].style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
                    allSlideContents[newIndex].style.opacity = '1';
                    allSlideContents[newIndex].style.transform = 'translateY(0)';
                }
            }, 200);
        }

        function createTabs(){
            Array.from(tabs.querySelectorAll('button')).forEach(b => b.remove());
            for (let i = 0; i < count; i++) {
                const btn = document.createElement('button');
                btn.id = `tab-${i}`;
                btn.className = 'mx-2 px-4 py-2 text-sm rounded-full text-white/60 data-[active=true]:text-blue-400 focus:outline-none border border-white/10 hover:border-white/20 transition-all';
                btn.textContent = String(i + 1);
                btn.setAttribute('aria-label', `Go to slide ${i + 1}`);
                btn.addEventListener('click', () => setIndex(i));
                tabs.appendChild(btn);
            }
        }

        function moveUnderline(){
            const active = document.getElementById(`tab-${index}`);
            if (!active) return;
            const parentLeft = tabs.getBoundingClientRect().left;
            const { left, width } = active.getBoundingClientRect();
            underline.style.left = (left - parentLeft) + 'px';
            underline.style.width = width + 'px';
        }

        function updateTabs(){
            const buttons = Array.from(tabs.querySelectorAll('button'));
            buttons.forEach((b, i) => {
                b.dataset.active = String(i === index);
                b.setAttribute('aria-selected', String(i === index));
            });
            moveUnderline();
        }

        // Keyboard support
        tabs.addEventListener('keydown', (e) => {
            const buttons = Array.from(tabs.querySelectorAll('button'));
            const max = buttons.length - 1;
            if (e.key === 'ArrowRight' || e.key === 'ArrowLeft') {
                e.preventDefault();
                const dir = e.key === 'ArrowRight' ? 1 : -1;
                let next = index + dir;
                if (next < 0) next = max; 
                if (next > max) next = 0;
                setIndex(next);
                buttons[next].focus();
            }
        });

        // Prev/Next
        if (prevBtn) prevBtn.addEventListener('click', () => setIndex(index - 1));
        if (nextBtn) nextBtn.addEventListener('click', () => setIndex(index + 1));

        window.addEventListener('resize', () => requestAnimationFrame(moveUnderline));

        // Auto-advance slideshow
        let autoAdvanceInterval;
        
        function startAutoAdvance() {
            autoAdvanceInterval = setInterval(() => {
                setIndex(index + 1);
            }, 5000); // Change slide every 5 seconds
        }
        
        function stopAutoAdvance() {
            if (autoAdvanceInterval) {
                clearInterval(autoAdvanceInterval);
            }
        }
        
        // Pause auto-advance on hover
        const slideshow = document.querySelector('.slideshow-container');
        if (slideshow) {
            slideshow.addEventListener('mouseenter', stopAutoAdvance);
            slideshow.addEventListener('mouseleave', startAutoAdvance);
        }
        
        // Initialize
        if (count > 0) {
            setTrackWidth();
            createTabs();
            setIndex(0);
            
            // Show first slide content
            setTimeout(() => {
                const firstSlideContent = document.querySelector('.slide-content');
                if (firstSlideContent) {
                    firstSlideContent.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
                    firstSlideContent.style.opacity = '1';
                    firstSlideContent.style.transform = 'translateY(0)';
                }
            }, 300);
            
            // Start auto-advance
            startAutoAdvance();
        }
    </script>
</body>
</html>
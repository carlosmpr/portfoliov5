---
// src/pages/contact.astro
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Get in touch with Carlos Polanco - Let's discuss your next project or collaboration opportunity" />
    <meta name="keywords" content="contact, Carlos Polanco, hire developer, project inquiry, collaboration" />
    <meta property="og:title" content="Contact - Carlos Polanco" />
    <meta property="og:description" content="Get in touch with Carlos Polanco - Let's discuss your next project or collaboration opportunity" />
    <meta property="og:type" content="website" />
    <title>Contact - Carlos Polanco</title>
</head>
<body class="bg-white text-gray-900 font-sans antialiased overflow-x-hidden">
    <Navbar currentPage="contact" />

    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-6">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-5xl md:text-6xl font-light text-gray-900 mb-6 tracking-tight">
                Let's Talk
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto font-light leading-relaxed">
                Have a project in mind or just want to chat about technology? I'd love to hear from you.
            </p>
        </div>
    </section>

    <!-- Main Contact Content -->
    <section class="pb-20 px-6">
        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
                
                <!-- Contact Information -->
                <div class="space-y-8">
                    <div>
                        <h2 class="text-3xl font-light text-gray-900 mb-8">Get In Touch</h2>
                        <p class="text-lg text-gray-700 leading-relaxed mb-8">
                            I'm always open to discussing new opportunities, interesting projects, or just connecting with fellow developers and creators. Whether you're looking for a collaborator, have a question about my work, or want to explore a potential partnership, don't hesitate to reach out.
                        </p>
                    </div>

                    <!-- Contact Methods -->
                    <div class="space-y-6">
                        <!-- Email -->
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-900 mb-1">Email</h3>
                                <p class="text-gray-600 mb-2">Best for detailed project discussions</p>
                                <a href="mailto:hello@carlospolanco.dev" class="text-blue-600 hover:text-blue-700 transition-colors">
                                    hello@carlospolanco.dev
                                </a>
                            </div>
                        </div>

                        <!-- LinkedIn -->
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center">
                                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-900 mb-1">LinkedIn</h3>
                                <p class="text-gray-600 mb-2">Professional networking and quick messages</p>
                                <a href="https://linkedin.com/in/carlospolanco" class="text-blue-600 hover:text-blue-700 transition-colors">
                                    /in/carlospolanco
                                </a>
                            </div>
                        </div>

                        <!-- GitHub -->
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gray-50 rounded-2xl flex items-center justify-center">
                                <svg class="w-6 h-6 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-900 mb-1">GitHub</h3>
                                <p class="text-gray-600 mb-2">Check out my code and open source contributions</p>
                                <a href="https://github.com/carlospolanco" class="text-gray-600 hover:text-gray-900 transition-colors">
                                    github.com/carlospolanco
                                </a>
                            </div>
                        </div>

                        <!-- Calendar -->
                        <div class="flex items-start gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-green-50 rounded-2xl flex items-center justify-center">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-900 mb-1">Schedule a Call</h3>
                                <p class="text-gray-600 mb-2">Book a 30-minute video call to discuss your project</p>
                                <a href="https://calendly.com/carlospolanco" class="text-green-600 hover:text-green-700 transition-colors">
                                    Book a meeting
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Response Time -->
                    <div class="bg-gray-50 rounded-2xl p-6">
                        <h3 class="font-medium text-gray-900 mb-3">Response Time</h3>
                        <p class="text-gray-700 text-sm leading-relaxed">
                            I typically respond to emails within 24 hours during weekdays. For urgent matters, LinkedIn messages usually get a faster response. I'm based in New York (EST) and prefer calls between 9 AM - 6 PM.
                        </p>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="bg-gray-50 rounded-3xl p-8 md:p-12">
                    <h2 class="text-2xl font-light text-gray-900 mb-8">Send a Message</h2>
                    
                    <form class="space-y-6">
                        <!-- Name -->
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                required
                                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-colors"
                                placeholder="Your full name"
                            />
                        </div>

                        <!-- Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                required
                                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-colors"
                                placeholder="your@email.com"
                            />
                        </div>

                        <!-- Subject -->
                        <div>
                            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                            <select 
                                id="subject" 
                                name="subject" 
                                required
                                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-colors"
                            >
                                <option value="">Select a topic</option>
                                <option value="project">New Project Inquiry</option>
                                <option value="collaboration">Collaboration Opportunity</option>
                                <option value="freelance">Freelance Work</option>
                                <option value="consultation">Technical Consultation</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <!-- Message -->
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="6" 
                                required
                                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-colors resize-none"
                                placeholder="Tell me about your project, timeline, and any specific requirements..."
                            ></textarea>
                        </div>

                        <!-- Budget (Optional) -->
                        <div>
                            <label for="budget" class="block text-sm font-medium text-gray-700 mb-2">Project Budget (Optional)</label>
                            <select 
                                id="budget" 
                                name="budget"
                                class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-colors"
                            >
                                <option value="">Select budget range</option>
                                <option value="under-5k">Under $5,000</option>
                                <option value="5k-15k">$5,000 - $15,000</option>
                                <option value="15k-30k">$15,000 - $30,000</option>
                                <option value="30k-plus">$30,000+</option>
                                <option value="discuss">Let's discuss</option>
                            </select>
                        </div>

                        <!-- Submit Button -->
                        <button 
                            type="submit"
                            class="w-full bg-gray-900 text-white px-8 py-4 rounded-xl hover:bg-gray-800 transition-colors font-medium"
                        >
                            Send Message
                        </button>

                        <!-- Privacy Note -->
                        <p class="text-xs text-gray-600 text-center">
                            Your information is secure and will only be used to respond to your inquiry.
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 px-6 bg-gray-50">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-light text-gray-900 mb-16 text-center">Frequently Asked Questions</h2>
            
            <div class="space-y-8">
                <div class="bg-white rounded-2xl p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-3">What types of projects do you work on?</h3>
                    <p class="text-gray-700 leading-relaxed">
                        I specialize in full-stack web applications, from e-commerce platforms and SaaS products to custom business solutions. I work with both startups and established companies, handling everything from MVP development to scaling existing applications.
                    </p>
                </div>

                <div class="bg-white rounded-2xl p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-3">What's your typical project timeline?</h3>
                    <p class="text-gray-700 leading-relaxed">
                        Project timelines vary based on scope and complexity. A simple website might take 2-4 weeks, while a complex web application could take 3-6 months. I always provide detailed estimates after understanding your specific requirements.
                    </p>
                </div>

                <div class="bg-white rounded-2xl p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-3">Do you work with teams or solo?</h3>
                    <p class="text-gray-700 leading-relaxed">
                        I'm comfortable working both independently and as part of a team. I often collaborate with designers, other developers, and project managers. I'm experienced with remote work and agile development methodologies.
                    </p>
                </div>

                <div class="bg-white rounded-2xl p-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-3">What's included in your development services?</h3>
                    <p class="text-gray-700 leading-relaxed">
                        My services typically include architecture planning, development, testing, deployment, and post-launch support. I also provide documentation, code reviews, and can help with technical strategy and technology selection.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Alternative Contact Methods -->
    <section class="py-20 px-6">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-3xl font-light text-gray-900 mb-8">Prefer a Different Approach?</h2>
            <p class="text-lg text-gray-600 mb-12 max-w-2xl mx-auto">
                Not ready for a formal inquiry? Here are other ways to connect and get to know my work.
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="text-center">
                    <div class="w-16 h-16 bg-blue-50 rounded-3xl flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                        </svg>
                    </div>
                    <h3 class="font-medium text-gray-900 mb-2">Follow My Work</h3>
                    <p class="text-gray-600 text-sm mb-4">Stay updated with my latest projects and insights</p>
                    <a href="/blog" class="text-blue-600 hover:text-blue-700 transition-colors text-sm font-medium">
                        Read My Blog →
                    </a>
                </div>

                <div class="text-center">
                    <div class="w-16 h-16 bg-green-50 rounded-3xl flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                        </svg>
                    </div>
                    <h3 class="font-medium text-gray-900 mb-2">Connect Socially</h3>
                    <p class="text-gray-600 text-sm mb-4">Join the conversation on professional networks</p>
                    <a href="https://twitter.com/yourname" class="text-green-600 hover:text-green-700 transition-colors text-sm font-medium">
                        Follow on Twitter →
                    </a>
                </div>

                <div class="text-center">
                    <div class="w-16 h-16 bg-purple-50 rounded-3xl flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                        </svg>
                    </div>
                    <h3 class="font-medium text-gray-900 mb-2">Learn Together</h3>
                    <p class="text-gray-600 text-sm mb-4">Explore my open source contributions</p>
                    <a href="https://github.com/yourname" class="text-purple-600 hover:text-purple-700 transition-colors text-sm font-medium">
                        View Open Source →
                    </a>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</body>
</html>
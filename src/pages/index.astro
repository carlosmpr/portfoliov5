                    <!-- Large Featured Project -->
                    <article class="md:col-span-8 bg-gradient-to-br from-slate-900 to-slate-800 rounded-2xl sm:rounded-3xl p-6 sm:p-8 md:p-12 text-white group cursor-pointer hover:scale-[1.02] transition-transform duration-300" onclick="window.location.href='/work/chatgpt-development-kit'" role="button" tabindex="0" onkeydown="if(event.key==='Enter'||event.key===' ') window.location.href='/work/chatgpt-development-kit'">
                        <div class="flex flex-col justify-between h-full min-h-[300px] sm:min-h-[400px]">
                            <div>
                                <h3 class="text-xl sm:text-2xl md:text-3xl font-light mb-3 sm:mb-4 leading-tight">ChatGPT Development Kit</h3>
                                <p class="text-slate-300 text-base sm:text-lg mb-4 sm:mb-6 max-w-lg leading-relaxed">Open-source GitHub repository providing developers with practical ChatGPT integrations, custom prompts, and API workflows for common business use cases</p>
                                <div class="flex flex-wrap gap-2 mb-6 sm:mb-8">
                                    <span class="px-2 sm:px-3 py-1 bg-white/10 text-white rounded-full text-xs sm:text-sm backdrop-blur">OpenAI API</span>
                                    <span class="px-2 sm:px-3 py-1 bg-white/10 text-white rounded-full text-xs sm:text-sm backdrop-blur">JavaScript</span>
                                    <span class="px-2 sm:px-3 py-1 bg-white/10 text-white rounded-full text-xs sm:text-sm backdrop-blur">Node.js</span>
                                    <span class="px-2 sm:px-3 py-1 bg-white/10 text-white rounded-full text-xs sm:text-sm backdrop-blur">Open Source</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <span class="text-slate-400 text-sm" aria-label="Project 01">01</span>
                            </div>
                        </div>
                    </article>

                    <!-- Medium Project -->
                    <article class="md:col-span-4 bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl sm:rounded-3xl p-6 sm:p-8 group cursor-pointer hover:scale-[1.02] transition-transform duration-300" onclick="window.location.href='/work/ai-learning-platform'" role="button" tabindex="0" onkeydown="if(event.key==='Enter'||event.key===' ') window.location.href='/work/ai-learning-platform'">
                        <div class="flex flex-col justify-between h-full min-h-[300px] sm:min-h-[400px]">
                            <div>
                                <h3 class="text-lg sm:text-xl md:text-2xl font-medium text-gray-900 mb-3 sm:mb-4 leading-tight">AI Learning Platform</h3>
                                <p class="text-gray-700 mb-4 sm:mb-6 text-sm sm:text-base leading-relaxed">Educational platform teaching AI concepts with hands-on tutorials and interactive examples for developers</p>

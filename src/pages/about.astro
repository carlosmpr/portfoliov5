<style>
    /* GSAP Animation Initial States - Hidden by default */
    .about-hero,
    .about-sidebar,
    .about-content,
    .about-skill-card,
    .about-cert,
    .about-timeline-item,
    .about-cta {
        opacity: 0;
        visibility: hidden;
    }

    /* Fallback CSS animations if GSAP fails */
    .css-animations .about-hero {
        opacity: 0;
        transform: translateY(50px) scale(0.95);
        transition: opacity 0.9s cubic-bezier(0.19, 1, 0.22, 1),
                    transform 0.9s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .css-animations .about-hero.is-visible {
        opacity: 1;
        transform: translateY(0) scale(1);
        visibility: visible;
    }

    .css-animations .about-sidebar {
        opacity: 0;
        transform: translateX(-80px) scale(0.95);
        transition: opacity 0.8s cubic-bezier(0.19, 1, 0.22, 1),
                    transform 0.8s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .css-animations .about-sidebar.is-visible {
        opacity: 1;
        transform: translateX(0) scale(1);
        visibility: visible;
    }

    .css-animations .about-content {
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 0.7s cubic-bezier(0.19, 1, 0.22, 1),
                    transform 0.7s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .css-animations .about-content.is-visible {
        opacity: 1;
        transform: translateY(0);
        visibility: visible;
    }

    .css-animations .about-skill-card,
    .css-animations .about-cert,
    .css-animations .about-timeline-item {
        opacity: 0;
        transform: translateY(30px) scale(0.9);
        transition: opacity 0.6s cubic-bezier(0.19, 1, 0.22, 1),
                    transform 0.6s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .css-animations .about-skill-card.is-visible,
    .css-animations .about-cert.is-visible,
    .css-animations .about-timeline-item.is-visible {
        opacity: 1;
        transform: translateY(0) scale(1);
        visibility: visible;
    }

    .css-animations .about-cta {
        opacity: 0;
        transform: translateY(60px) scale(0.95);
        transition: opacity 0.8s cubic-bezier(0.19, 1, 0.22, 1),
                    transform 0.8s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .css-animations .about-cta.is-visible {
        opacity: 1;
        transform: translateY(0) scale(1);
        visibility: visible;
    }

    /* Staggered delays for CSS fallback */
    .css-animations .delay-100 { transition-delay: 100ms; }
    .css-animations .delay-200 { transition-delay: 200ms; }
    .css-animations .delay-300 { transition-delay: 300ms; }
    .css-animations .delay-400 { transition-delay: 400ms; }
    .css-animations .delay-500 { transition-delay: 500ms; }
    .css-animations .delay-600 { transition-delay: 600ms; }
    .css-animations .delay-700 { transition-delay: 700ms; }
    .css-animations .delay-800 { transition-delay: 800ms; }

    /* Enhanced hover effects */
    .skill-card-hover,
    .timeline-hover,
    .resume-button,
    .cta-button {
        transition: all 0.3s ease;
    }

    .skill-card-hover:hover {
        transform: translateY(-12px) scale(1.03);
    }

    .timeline-hover:hover {
        transform: translateY(-4px) scale(1.02);
    }

    .resume-button:hover,
    .cta-button:hover {
        transform: translateY(-3px) scale(1.05);
    }
</style>


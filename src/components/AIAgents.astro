<style>
    .animate-slide-up {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }

    .animate-slide-up.is-visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Section background - always dark */
    .ai-section {
        background: #0a0a0a;
        color: white;
    }

    .ai-section .text-gray-900 {
        color: white;
    }

    .ai-section .text-gray-600 {
        color: rgba(255, 255, 255, 0.7);
    }

    .ai-section .text-white\/70 {
        color: rgba(255, 255, 255, 0.7);
    }

    .ai-section .text-white\/90 {
        color: rgba(255, 255, 255, 0.9);
    }

    .ai-section .text-white\/60 {
        color: rgba(255, 255, 255, 0.6);
    }

    /* Feature cards */
    .feature-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(38, 38, 38, 0.6);
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.06);
        cursor: pointer;
    }

    /* Micro interactions for card elements */
    .card-visual {
        transition: all 0.3s ease;
    }

    .card-icon {
        transition: all 0.3s ease;
    }

    .card-grid {
        transition: all 0.3s ease;
    }

    .card-grid > div {
        transition: all 0.3s ease;
    }

    .card-bars {
        transition: all 0.3s ease;
    }

    .card-bars > div {
        transition: all 0.3s ease;
    }

    @media (hover: hover) {
        .feature-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255,255,255,0.1);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .feature-card:hover .card-visual {
            transform: scale(1.05);
        }

        .feature-card:hover .card-icon {
            transform: rotate(5deg) scale(1.1);
        }

        .feature-card:hover .card-grid {
            transform: scale(1.1);
        }

        .feature-card:hover .card-grid > div:nth-child(1) {
            transform: translateY(-2px) rotate(2deg);
        }

        .feature-card:hover .card-grid > div:nth-child(2) {
            transform: translateY(2px) rotate(-2deg);
        }

        .feature-card:hover .card-grid > div:nth-child(3) {
            transform: translateY(2px) rotate(2deg);
        }

        .feature-card:hover .card-grid > div:nth-child(4) {
            transform: translateY(-2px) rotate(-2deg);
        }

        .feature-card:hover .card-bars {
            transform: scale(1.05);
        }

        .feature-card:hover .card-bars > div:nth-child(1) {
            transform: scaleX(1.2);
        }

        .feature-card:hover .card-bars > div:nth-child(2) {
            transform: scaleX(1.1);
        }

        .feature-card:hover .card-bars > div:nth-child(3) {
            transform: scaleX(1.3);
        }

        .feature-button:hover {
            background: rgba(255, 255, 255, 0.1);
        }
    }

    .pill-badge {
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.7);
    }

    .feature-button {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.7);
    }


    .tag {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.6);
    }

    /* Mobile horizontal scroll for AI agents */
    .mobile-scroll-container {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none; /* Firefox */
        -ms-overflow-style: none; /* Internet Explorer 10+ */
    }

    .mobile-scroll-container::-webkit-scrollbar {
        display: none; /* Chrome, Safari, Edge */
    }

    .mobile-scroll-grid {
        display: flex;
        gap: 1.5rem;
        min-width: max-content;
    }

    .mobile-scroll-item {
        flex: 0 0 280px;
        min-height: 320px;
    }

    @media (min-width: 768px) {
        .mobile-scroll-container {
            overflow: visible;
        }
        
        .mobile-scroll-grid {
            display: grid;
            grid-template-columns: repeat(1, 1fr);
        }
    }

    @media (min-width: 640px) {
        .mobile-scroll-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .mobile-scroll-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }
</style>


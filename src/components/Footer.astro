                <a href="mailto:hello@carlospolanco.dev" 
                   class="text-white/60 hover:text-white transition-all duration-300 hover:scale-110" 
                   aria-label="Send email">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </a>
            </div>
        </div>
        
        <!-- Bottom Border -->
        <div class="mt-6 pt-6 border-t border-white/10 text-center">
            <p class="text-white/40 text-xs">
                Built with ❤️ using Astro, TypeScript, and Tailwind CSS • <span id="last-updated"></span>
            </p>
        </div>
    </div>
</footer>

<script>
    // Set current year and last updated date
    document.addEventListener('DOMContentLoaded', function() {
        const currentYear = new Date().getFullYear();
        const currentYearElement = document.getElementById('current-year');
        if (currentYearElement) {
            currentYearElement.textContent = currentYear.toString();
        }

        // Set last updated date
        const lastUpdatedElement = document.getElementById('last-updated');
        if (lastUpdatedElement) {
            const now = new Date();
            const options = { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            lastUpdatedElement.textContent = `Last updated: ${now.toLocaleDateString('en-US', options)}`;
        }
    });
</script>
---
// src/components/Footer.astro
export interface Props {
    className?: string;
}

const { className = "" } = Astro.props;
---

<footer class={`py-8 sm:py-12 px-4 sm:px-6 border-t border-gray-100 bg-neutral-950 ${className}`} role="contentinfo">
    <div class="max-w-6xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
            <!-- Left Side: Copyright and Professional Info -->
            <div class="text-center md:text-left space-y-2">
                <p class="text-white/90 text-sm sm:text-base font-medium">Carlos Polanco</p>
                <p class="text-white/60 text-xs sm:text-sm">Full-Stack Developer & AI Consultant</p>
                <p class="text-white/50 text-xs" id="copyright">© <span id="current-year"></span> Carlos Polanco. All rights reserved.</p>
            </div>
            
            <!-- Center: Quick Links -->
            <nav class="flex flex-wrap justify-center gap-4 sm:gap-6" aria-label="Footer navigation">
                <a href="/about" class="text-white/70 hover:text-white transition-colors text-xs sm:text-sm" aria-label="About page">About</a>
                <a href="/work" class="text-white/70 hover:text-white transition-colors text-xs sm:text-sm" aria-label="Work portfolio">Work</a>
                <a href="/contact" class="text-white/70 hover:text-white transition-colors text-xs sm:text-sm" aria-label="Contact page">Contact</a>
                <a href="/resume.pdf" class="text-white/70 hover:text-white transition-colors text-xs sm:text-sm" aria-label="Download resume">Resume</a>
            </nav>

            <!-- Right Side: Social Links -->
            <div class="flex items-center gap-4">
                <a href="https://github.com/carlospolanco" 
                   class="text-white/60 hover:text-white transition-all duration-300 hover:scale-110" 
                   aria-label="GitHub profile"
                   target="_blank"
                   rel="noopener noreferrer">

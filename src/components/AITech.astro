<style>
    .animate-slide-up {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }

    .animate-slide-up.is-visible {
        opacity: 1;
        transform: translateY(0);
    }

    .glass-card {
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(38, 38, 38, 0.6);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.06);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

    .glass-card:hover {
        transform: translateY(-4px);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1), 0 12px 25px -5px rgba(0, 0, 0, 0.3);
        border-color: rgba(255, 255, 255, 0.2);
    }

    .title-sm {
        font-size: 14px;
        font-weight: 500;
        letter-spacing: 0.025em;
        color: rgba(255, 255, 255, 0.9);
    }

    .muted {
        font-size: 14px;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.7);
    }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border-radius: 9999px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        padding: 4px 12px;
        font-size: 12px;
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.3s ease;
    }

    .pill:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.2);
    }

    /* Chart animation */
    .chart-bar {
        transition: all 0.5s ease;
        transform-origin: bottom;
    }

    .glass-card:hover .chart-bar {
        transform: scaleY(1.1);
    }

    /* Progress bar animations */
    .progress-bar {
        transition: all 0.8s ease;
        transform-origin: left;
    }

    .glass-card:hover .progress-bar {
        transform: scaleX(1.05);
    }

    /* Globe animation */
    .globe-ring {
        transition: all 1s ease;
    }

    .glass-card:hover .globe-ring:nth-child(1) {
        transform: scale(1.02);
    }

    .glass-card:hover .globe-ring:nth-child(2) {
        transform: scale(1.04);
    }

    .glass-card:hover .globe-ring:nth-child(3) {
        transform: scale(1.06);
    }

    /* Pipeline animation */
    .pipeline-node {
        transition: all 0.3s ease;
    }

    .glass-card:hover .pipeline-node {
        transform: scale(1.05);
    }

    .pipeline-connector {
        transition: all 0.5s ease;
    }

    .glass-card:hover .pipeline-connector {
        background: linear-gradient(to right, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.4), rgba(255, 255, 255, 0.2));
    }
</style>


---
// src/components/Slideshow.astro
---

<style>
    .slideshow-track {
        transition: none; /* Let GSAP handle all transitions */
    }
    
    .slide-content {
        opacity: 0;
        transform: translateY(20px);
    }
    
    .slide-content.visible {
        opacity: 1;
        transform: translateY(0);
    }
    
    /* Fallback CSS animations if GSAP fails */
    .css-animations .slideshow-track {
        transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .css-animations .slide-content {
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .css-animations .tab-underline {
        transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
</style>

<!-- Project Slideshow -->
